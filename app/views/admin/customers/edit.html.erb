<section class="hero is-success">
  <div class="hero-body">
    <div class="container has-text-centered">
      <h1 class="title">
        「<%= @customer.name %>」さんの会員情報編集
      </h1>
    </div>
  </div>
</section>

<section class = "section" >
  <div class = "container" >
    <div class = "px-5 mx-5 row" >
      <div class= "col-9" >
        <%= form_with model: @customer, url: admin_customer_path(@customer) do |f| %>
          <div class="form-group row">
            <label class="col-3">会員ID</label>
            <label class="col-3"><%= @customer.id %></label>
          </div>

          <div class="form-group row">
            <%= f.label :氏名, class: "col-3" %>
            <%= f.text_field :name, autocomplete: "name", class: "form-control col-3" %>
          </div>

          <div class="form-group row">
            <%= f.label :introduction, '自己紹介文', class: "col-3" %>
            <%= f.text_area :introduction, autocomplete: "email", class: "form-control col-3" %>
          </div>

          <div class="form-group row">
            <%= f.label :email, 'メールアドレス', class: "col-3" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control col-3" %>
          </div>

          <div class="form-group row">
            <%= f.label :is_deleted, '会員ステータス', class: "col-3" %>
            <%= f.radio_button :is_deleted, :false %>
            <%= f.label :is_deleted, "有効", class: "ml-2" %>
            <%= f.radio_button :is_deleted, :true, class: "ml-2" %>
            <%= f.label :is_deleted, "退会", class: "ml-2" %>
          </div>

          <div class="actions mb-5 mt-5">
            <%= f.submit "変更を保存", class: "btn btn-success btn-lg col-2 offset-3" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
