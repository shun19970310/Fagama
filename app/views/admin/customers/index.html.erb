<section class="hero is-success">
  <div class="hero-body">
    <div class="container has-text-centered">
      <h1 class="title">
        会員一覧
      </h1>
    </div>
  </div>
</section>

<section class="section">
  <div class="container px-5 px-sm-0">
    <div class="row mt-3">
      <div class="col-md-8 offset-md-1">
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>会員ID</th>
              <th>氏名</th>
              <th>メールアドレス</th>
              <th>会員ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @customers.each do |customer| %>
             <tr>
              <td><%= customer.id %></td>
              <td>
                <% if customer.is_deleted == false %>
                  <%= link_to admin_customer_path(customer.id) do %>
                    <%= customer.name %>
                  <% end %>
                <% else %>
                  <%= link_to admin_customer_path(customer.id) do %>
                    <%= customer.name %>（退会済みユーザー）
                  <% end %>
                <% end %>
              </td>
              <td><%= customer.email %></td>
              <% if customer.is_deleted == false %>
                <td class="text-success">有効</td>
              <% else %>
                <td>退会</td>
              <% end %>
             </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>
<div class = "pagination pagination justify-content-center mb-5" >
  <%= paginate @customers %>
</div>
