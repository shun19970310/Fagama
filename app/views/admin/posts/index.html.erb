<section class="hero is-warning">
  <div class="hero-body">
    <div class="container has-text-centered">
      <h1 class="title">
        会員投稿リスト
      </h1>
    </div>
  </div>
</section>

<div class="container px-5 px-sm-0">
  <div class="row mt-3">
    <div class="col-md-8 offset-md-1">
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>ユーザー</th>
            <th>タイトル</th>
            <th>内容</th>
            <th>投稿日時</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= post.customer.id %></td>
              <td>
                <%= link_to admin_customer_path(post.customer.id) do %>
                  <%= post.customer.name%>
                <% end %>
              </td>
              <td><%= post.title %></td>
              <td><%= simple_format post.body %></td>
              <td>
                <div class ="time"><%= l post.created_at %></div>
              </td>
              <td><%= link_to "削除", admin_post_path(post), method: :delete, "data-confirm" => "本当に削除しますか?", class: "btn btn-danger" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
