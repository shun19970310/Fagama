<section class="hero is-success">
  <div class="hero-body">
    <div class="container has-text-centered">
      <h1 class="title">
        「<%= @tag.name %>」を含む投稿
      </h1>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <% @tag_list.each do |list|%>
          <%=link_to list.name, search_tag_path(tag_id: list.id) %>
          <%= "(#{list.posts.count})" %>
        <% end %>
      </div>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="row">
        <% @posts.each do |post| %>
          <div class="col-md-4">
            <div class="card mt-2 rounded-circle">
              <div class="card-body text-center">
                <h4 class="card-title">
                  <%=link_to post_path(post.id) do %>
                    <%= post.title.truncate(25) %>
                  <% end %>
                </h4>
                </h6>
                <div id= "<%=post.id %>" >
                  <%= render 'public/likes/like', post: post %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
    </div>
  </div>
</section>
<div class = "pagination pagination justify-content-center mb-5" >
  <%= paginate @posts %>
</div>