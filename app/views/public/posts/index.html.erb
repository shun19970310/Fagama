<section class="hero is-danger">
  <div class="hero-body">
    <div class="container has-text-centered">
      <h1 class="title">
        投稿一覧
      </h1>
    </div>
  </div>
</section>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <div class = "mt-2">
        <% @tag_list.each do |list|%>
         <%=link_to list.name, search_tag_path(tag_id: list.id) %>
         <%= "(#{list.posts.count})" %>
        <% end %>
        <span><%= link_to "新規投稿", new_post_path, class: "btn btn-success ml-3" %></span>
      </div>

      <div class = "mt-2">
        <%= form_with url: search_posts_path, local: true, method: :get do |f| %>
         <%= f.text_field :keyword, placeholder: "投稿を検索する" %>
         <%= f.submit "検索" %>
        <% end %>
      </div>

      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>投稿主</th>
            <th>タイトル</th>
            <th>内容</th>
            <th>投稿日時</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td>
                <%= link_to customer_path(post.id) do %>
                  <%= post.customer.name%>
                <% end %>
              </td>
              <td>
                <%= link_to post_path(post.id) do %>
                  <%= post.title %>
                <% end %>
              </td>
              <td><%= simple_format post.body %></td>
              <td>
                <div class ="time"><%= l post.created_at %></div>
              </td>
              <td>
                <i class="fa fa-comment"></i>
                <span><%= "#{post.comments.count} " %></span>
              </td>
              <td>
                <i class="fa fa-thumbs-up"></i>
                <span><%= "#{post.likes.count}" %></span>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>