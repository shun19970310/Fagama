<section class="hero is-success">
  <div class="hero-body">
    <div class="container has-text-centered">
      <h1 class="title">
        ゲーム投稿リスト
      </h1>
    </div>
  </div>
</section>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <div class = "mt-2">
        <% @tag_list.each do |list|%>
         <%=link_to list.name, search_tag_path(tag_id: list.id) %>
         <%= "(#{list.posts.count})" %>
        <% end %>
      </div>

      <div class = "mt-3">
        <%= form_with url: search_posts_path, local: true, method: :get do |f| %>
         <%= f.text_field :keyword, placeholder: "キーワードで検索" %>
         <%= f.submit "検索" %>
        <% end %>
      </div>

      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>ユーザー</th>
            <th>タイトル</th>
            <th>内容</th>
            <th>投稿日時</th>
            <th>
              <%= link_to new_post_path, style:"font-size:40px; color:orange;" do %>
                <i class="fas fa-plus-circle"></i>
              <% end %>
            </th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td>
                <figure class="image is-48x48"  style="margin-left: auto; margin-right: auto;">
                  <%= attachment_image_tag post.customer, :image, fallback: "no_image.jpg", class: "image is-rounded" %>
                </figure>
              </td>
              <td>
                <%= link_to customer_path(post.customer.id) do %>
                  <%= post.customer.name%>
                <% end %>
              </td>
              <td>
                <%= link_to post_path(post.id) do %>
                  <%= post.title %>
                <% end %>
              </td>
              <td><%= simple_format post.body %></td>
              <td>
                <div class ="time"><%= l post.created_at %></div>
              </td>
              <td>
                <i class="fa fa-comment"></i>
                <span><%= "#{post.comments.count} " %></span>
              </td>
              <td>
                <i class="fa fa-thumbs-up"></i>
                <span><%= "#{post.likes.count}" %></span>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>