<div class="container px-5 px-sm-0">

  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h2 class="mt-3">投稿一覧
       <span><%= link_to "新規投稿", new_post_path, class: 'btn btn-sm mb-1 btn-primary' %></span>
      </h2>
      <table class="table table-hover table-inverse">

        <thead>
          <tr>
            <th></th>
            <th>タイトル</th>
            <th>内容</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @posts.each do |posts|%>
            <tr>
              <td>
                <%= link_to customer_path(posts.customer.id) do %>
                  <%= attachment_image_tag posts.customer.image(100,100), class:"attachment customer image fallback"; %>
                <% end %>
              </td>
              <td>
                <%= link_to post_path(posts.id) do %>
                  <%= posts.title %>
                <% end %>
              </td>
              <td><%= posts.body %></td>
            </tr>
          <% end %>
        </tbody>

      </table>
    </div>
  </div>
</div>