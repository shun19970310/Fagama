<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>投稿ユーザー</th>
      <th>タイトル</th>
      <th>内容</th>
      <th>投稿日時</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td>
          <%= link_to customer_path(post.id) do %>
            <%= post.customer.name%>
          <% end %>
        </td>
        <td>
          <%= link_to post_path(post.id) do %>
            <%= post.title %>
          <% end %>
        </td>
        <td><%= simple_format post.body %></td>
        <td>
          <div class ="time"><%= l post.created_at %></div>
        </td>
        <td>
          <i class="fa fa-comment"></i>
          <span><%= "#{post.comments.count} " %></span>
        </td>
        <td>
          <i class="fa fa-thumbs-up"></i>
          <span><%= "#{post.likes.count}" %></span>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>