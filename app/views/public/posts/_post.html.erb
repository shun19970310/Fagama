  <% likes.each do |like| %>
    <div class="col-md-4">
      <div class="card mt-2 rounded-circle">
        <div class="card-body text-center">
          <h4 class="card-title">
            「<%= link_to like.title, post_path(like.id) %>」
          </h4>
          <p class="card-name">
            by  <%= link_to like.customer.name, customer_path(like.customer.id) %>
          </p>
        </div>
      </div>
    </div>
  <% end %>