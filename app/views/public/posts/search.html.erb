<section class="hero is-success">
  <div class="hero-body">
    <div class="container has-text-centered">
      <h1 class="title">
        検索結果
      </h1>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
       <% if @posts.present? %>
        <%= render "result", posts: @posts %>
       <% else %>
        <h4 class="text-center"><strong>検索結果がありませんでした</strong></h4>
       <% end %>
      </div>
    </div>
  </div>
</section>