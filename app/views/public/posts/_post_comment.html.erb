<% comments.each do |comment| %>
	<div class="comments-index mb-2">
    <%= comment.customer.name %>
    <%= l comment.created_at %><br>
    <div class="d-flex">
      <%= comment.comment %>
      <% if comment.customer == current_customer %>
        <div class="comment-delete">
          <%= link_to "削除", post_comment_path(comment.post, comment), method: :delete, remote: true,  "data-confirm" => "削除しますか？",class: "btn-sm btn-danger ml-3" %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>