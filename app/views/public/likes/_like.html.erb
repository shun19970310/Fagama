<% if post.liked_by?(current_customer) %>
 <%= link_to post_likes_path(post), method: :delete, remote: true, class: "favorite_btn" do %>
  ♥<%= post.likes.count %>
 <% end %>
<% else %>
 <%= link_to post_likes_path(post), method: :post, remote: true, class: "favorite_btn" do %>
  ♡<%= post.likes.count %>
 <% end %>
<% end %>