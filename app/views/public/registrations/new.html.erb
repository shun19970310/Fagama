<%= flash[:error] %>
<div class="container my-3">
 <div class="row">
  <div class="offset-5">
   <h3>新規会員登録</h3>
  </div>
 </div>

 <div class="row mt-3">
  <div class="offset-4 col-4">
   <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
    <div class="form-group">
      <%= f.label :ニックネーム, class: "brown-border px-3" %>
      <%= f.text_field :name,class: "form-control offset-1 ml-3 col-12" %>
    </div>

    <div class="form-group">
      <%= f.label :紹介文, class: "brown-border px-3" %>
      <%= f.text_area :introduction, class: "form-control ml-3 col-12" %>
    </div>

    <div class="form-group">
      <%= f.label :メールアドレス, class: "brown-border px-3" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control ml-3 col-12" %>
    </div>

    <div class="form-group">
     <%= f.label :パスワード, class: "brown-border px-3" %>
     <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %>文字以上)</em>
     <% end %><br />
     <%= f.password_field :password, autocomplete: "new-password", class: "form-control ml-3 col-12"%>
    </div>

    <div class="form-group">
     <%= f.label :パスワード（確認用）, class: "brown-border px-3" %><br />
     <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control ml-3 col-12" %>
    </div>

    <div class="form-group">
     <%= f.submit "新規登録", class:"btn btn-success ml-3" %>
    </div>
   <% end %>

   <div class="row">
    <div class="offset-3">
     <h3>既に登録済みの方</h3>
    </div>
   </div>

   <div class="row mb-2">
    <div class="offset-3">
      <%= render "public/shared/links" %>
    </div>
  </div>
 </div>
</div>
