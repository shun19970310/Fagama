<section class="hero is-warning">
  <div class="hero-body">
    <div class="container has-text-centered">
      <h1 class="title">
        「<%=@group.name %>」メンバーへのメール
      </h1>
    </div>
  </div>
</section>

<div class='container mt-4'>
  <div class='row justify-content-center'>
    <div class="col-6">
      <%= form_with url: group_send_mail_path(@group),method: :get, local: true do |f| %>
       <div class="form-group">
        <%= f.label :件名 %>
        <%= f.text_field :mail_title, class:'form-control'%>
       </div>
       <div class="form-group">
        <%=f.label:内容 %>
        <%= f.text_area :mail_content, class:'form-control' %>
       </div>
       <div class = "form-group d-flex justify-content">
        <%= f.submit'送信', class: 'btn btn-success' %>
       </div>
      <% end %>
    </div>
  </div>
</div>