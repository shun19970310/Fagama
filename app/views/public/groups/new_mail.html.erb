<section class="hero is-warning">
  <div class="hero-body">
    <div class="container has-text-centered">
      <h1 class="title">
        「<%=@group.name %>」メンバーへのメール
      </h1>
    </div>
  </div>
</section>

<section>
  <div class="container">
   <div class="row mt-5">
    <div class="col-lg-6 offset-lg-3 col-md-8 offset-md-2">
      <%= form_with url: group_send_mail_path(@group),method: :get, local: true do |f| %>
       <div class="form-group mt-3">
        <%= f.label :件名 %>
        <%= f.text_field :mail_title, placeholder: "件名",class:'form-control'%>
       </div>
       <div class="form-group my-4">
        <%=f.label:内容 %>
        <%= f.text_area :mail_content, placeholder: "メール内容", class:'form-control' %>
       </div>
       <div class = "form-group text-center">
        <%= f.submit'送信', class: 'btn btn-warning' %>
       </div>
      <% end %>
    </div>
   <div class="offset-lg-3 offset-md-2">
  </div>
</section>