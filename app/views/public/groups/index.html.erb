<section class="hero is-warning">
  <div class="hero-body">
    <div class="container has-text-centered">
      <h1 class="title">
        グループリスト
      </h1>
    </div>
  </div>
</section>

<div class='col-md-8 offset-md-1 mt-2'>
  <div class='row'>
    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th></th>
          <th>グループ名</th>
          <th>グループ紹介</th>
          <th>メンバー数</th>
          <th>
            <%= link_to new_group_path, style:"font-size:40px; color:orange;" do %>
              <i class="fas fa-plus-circle"></i>
            <% end %></th>
        </tr>
      </thead>
      <tbody>
        <% @groups.each do |group| %>
          <tr>
            <td>
              <figure class="image is-48x48"  style="margin-left: auto; margin-right: auto;">
                <%= attachment_image_tag group, :group_image, fallback: "no_image.jpg", class: "image is-rounded" %>
              </figure>
            </td>
            <td><%= link_to group.name, group_path(group) %></td>
            <td><%= group.introduction %></td>
            <td><i class="fa fa-users"></i> <%= group.customers.count %></td>
            <td>
             <% if group.owner_id == current_customer.id %>
              <%= link_to '編集', edit_group_path(group), class: "btn btn-sm btn-success" %>
             <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="row-mb-3">
    <div class="col-md-12">
      <%= paginate @groups %>
    </div>
  </div>
</div>
