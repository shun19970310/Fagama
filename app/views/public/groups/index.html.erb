<div class='col-md-8 offset-md-1'>
  <h2>グループ一覧
   <span>
    <%= link_to '新規作成', new_group_path, class: "btn btn-sm mb-1 btn-success" %>
   </span>
  </h2>
    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th>グループ名</th>
          <th>紹介文</th>
          <th>メンバー数</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @groups.each do |group| %>
          <tr>
            <td><%= link_to group.name, group_path(group) %></td>
            <td><%= group.introduction %></td>
            <td><i class="fa fa-users"></i> <%= group.customers.count %></td>
            <td>
             <% if group.owner_id == current_customer.id %>
              <%= link_to '編集', edit_group_path(group), class: "btn btn-sm btn-success" %>
             <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>