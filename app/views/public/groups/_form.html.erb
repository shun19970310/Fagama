<%= form_with model: group, local: true do |f| %>
  <div class="form-group mt-2">
    <%= f.label :グループ名 %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group mt-2">
    <%= f.label :紹介文 %>
    <%= f.text_area :introduction, class: 'form-control' %>
  </div>

  <div class="form-group mt-2">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>