<section class="hero is-warning">
  <div class="hero-body">
    <div class="container has-text-centered">
      <h1 class="title">
        グループ編集
      </h1>
    </div>
  </div>
</section>

<div class='container mt-3'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <%= form_with model: @group, local: true do |f| %>
        <div class="form-group mt-2">
          <%= f.label :name, class: "brown-border px-3" %>
          <%= f.text_field :name, class: "form-control offset-1 ml-3 col-12" %>
        </div>

        <div class="form-group mt-2">
          <%= f.label :introduction, class: "brown-border px-3" %>
         <%= f.text_area :introduction, class: "form-control ml-3 col-12" %>
        </div>

        <div class="form-group mt-2">
          <%= f.label :group_image_id, class: "brown-border px-3" %>
          <%= f.attachment_field :group_image, class: " ml-1 col-12" %>
        </div>

        <div class="form-group mt-4 mb-5">
           <%= f.submit "変更内容を保存", class:"btn btn-success ml-3" %>
        </div>
      <% end %>
    </div>
  </div>
</div>